{
    "extends": "stylelint-config-standard",
    "ignoreFiles": [
        "output.css"
    ],
    "rules": {
        "at-rule-no-unknown": [
          true,
          {
            "ignoreAtRules": [
              "tailwind",
              "apply",
              "responsive",
              "variants",
              "screen"
            ]
          }
        ],
        "indentation": 4,
        "declaration-empty-line-before": "never",
        "at-rule-empty-line-before": null
    }
}