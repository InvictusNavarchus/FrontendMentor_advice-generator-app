{
    "extends": "stylelint-config-standard",
    "ignoreFiles": [
        "output.css"
    ],
    "rules": {
        "at-rule-no-unknown": [
          true,
          {
            "ignoreAtRules": [
              "tailwind"
            ]
          }
        ],
        "indentation": 4,
        "declaration-empty-line-before": "never",
        "at-rule-empty-line-before": null,
        "color-function-notation": "legacy"
    }
}